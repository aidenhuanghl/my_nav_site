# MongoDB连接字符串
# 从MongoDB Atlas获取的SRV连接URI
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# MongoDB配置
# 如果你需要直接连接到一个实例而不是通过SRV记录进行服务发现，设置为true
MONGODB_DIRECT_CONNECTION=false

# 如果你使用的是副本集，指定副本集名称（通常会在Atlas界面中显示）
MONGODB_REPLICA_SET=atlas-xxxxxx-shard-0

# Node.js环境 (development, production, test)
NODE_ENV=development

# 服务器端口
PORT=3000

# 应用程序密钥 (用于JWT等)
APP_SECRET=your_secure_app_secret_here 